#!/bin/sh

### BEGIN INIT INFO
# Provides: edge-server
# Should-Start: postgresql
# Should-Stop: postgresql
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: starts the edge server
### END INIT INFO

set -e

umask 022

. /etc/rsna.conf
export RSNA_ROOT

mkdir -p $RSNA_ROOT/tmp/pids

TPID=$RSNA_ROOT/tmp/pids/transfer.pid
PPID=$RSNA_ROOT/tmp/pids/prepare.pid

USER=edge

JAVA=$JAVA_HOME/bin/java

export AS_JAVA=$JAVA_HOME

. /lib/lsb/init-functions

. $RSNA_ROOT/conf/jvm-opts

case $1 in
start)
	log_daemon_msg "Starting Edge server"

	if start-stop-daemon -c $USER --start -d $RSNA_ROOT --quiet -m --oknodo -b --pidfile $PPID --exec $JAVA -- -server $PREPARE_JVM_OPTS -jar $RSNA_ROOT/prep-content*.jar ; then
	    log_progress_msg "prepare-content-app"
	else
	    log_end_msg 1
	   exit 1
	fi

	if start-stop-daemon -c $USER --start -d $RSNA_ROOT --quiet -m --oknodo -b --pidfile $TPID --exec $JAVA -- -server $TRANSFER_JVM_OPTS -jar $RSNA_ROOT/transfer-content*.jar ; then log_progress_msg "transfer-content-app"
	else
	   log_end_msg 1
	   exit 1
	fi

	if su edge -l -c "$RSNA_ROOT/mirth/mirth-daemon start"; then log_progress_msg "mirth"
	else
	   log_end_msg 1
	   exit 1
	fi
	log_end_msg 0
        ;;
stop)
	if start-stop-daemon --stop --quiet --oknodo --pidfile $PPID; then
	    log_progress_msg "prepare-content-app"
	else
	   log_end_msg 1
	fi
	if start-stop-daemon --stop --quiet --oknodo --pidfile $TPID; then
	    log_progress_msg "transfer-content-app"
	else
	   log_end_msg 1
	fi

	if su edge -l -c "$RSNA_ROOT/mirth/mirth-daemon stop"; then log_progress_msg "mirth"
	else
	   log_end_msg 1
	   exit 1
	fi
	log_end_msg 0
        ;;

restart|reload)
	$0 stop
	$0 start
        ;;
*)
        log_action_msg "Usage: $0 {start|stop|restart}"
        exit 1

esac
