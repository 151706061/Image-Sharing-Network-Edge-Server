<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
  <id>install</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <excludes>
        <exclude>org.rsna.isn:token-app</exclude>
      </excludes>
      <binaries>
	<unpack>false</unpack>
	<dependencySets>
	  <dependencySet>
	    <unpack>false</unpack>
	    <scope>runtime</scope>
	    <outputDirectory>ext</outputDirectory>
	  </dependencySet>
	</dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
	<include>org.rsna.isn:token-app</include>
      </includes>
      <sources>
	<fileSets>
	  <fileSet>
	    <includes>
	      <include>token-app.war</include>
	    </includes>
	  </fileSet>
	</fileSets>
      </sources>
    </moduleSet>
    <moduleSet>
      <includes>
	<include>org.rsna.isn:retrieve-content</include>
      </includes>
      <sources>
	<fileSets>
          <fileSet>
	    <includes>
              <include>target/retrieve-content.zip</include>
              <include>target/retrieve-content</include>
	    </includes>
	  </fileSet>
	</fileSets>
      </sources>
    </moduleSet>
  </moduleSets>
  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>org.rsna.isn:core</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
